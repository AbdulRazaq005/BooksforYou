<!DOCTYPE html>
<html lang="en">

<head>
  <title><%= title %></title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />

</head>

<body>
  <div class="container">
    <div class="text-right">
      <div>User :&nbsp<%=userName%></div>
      <form action="/logout" method="POST" class="text-right">

        <a href="/myitems/add" class="btn btn-sm btn-warning pull-right">Add Item</a>
        <a href="/dashboard" class="btn btn-lg btn-dark">All Items</a>
        <button href="/" class="btn btn-lg btn-danger" type="submit">Log Out</button>
      </form>
    </div>
    <h3 class="text-center">My Items for Sale</h3>
    <br />
    <table class="table alert table-striped table-bordered">
      <thead class="thead-dark">
        <tr>
          <th>Book Name</th>
          <th>Author</th>
          <th>Price</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% items.forEach(function(item){ %>
        <tr>
          <td><%= item.itemName %></td>
          <td><%= item.itemQuantity %></td>
          <td><%= item.itemPrice %></td>
          <td>
            <a href="/edit_item/<%= item.itemId %>" class="btn btn-sm btn-primary">Edit</a>
            <a href="/delete_item/<%= item.itemId %>" class="btn btn-sm btn-danger">Delete</a>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>

</html>